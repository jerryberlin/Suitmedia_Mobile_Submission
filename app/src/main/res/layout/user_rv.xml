<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    android:layout_gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/rv_avatarIV"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_marginStart="18dp"
            android:background="@drawable/oval_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rv_nameTV"
            android:layout_width="251dp"
            android:layout_height="24dp"
            android:layout_marginStart="87dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/firstname_lastname"
            android:textColor="@color/dark_100"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/rv_avatarIV" />

        <TextView
            android:id="@+id/rv_emailTV"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="19dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/email_email_com"
            android:textColor="@color/dark_60"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/rv_nameTV"
            app:layout_constraintTop_toBottomOf="@+id/rv_nameTV" />

        <View
            android:id="@+id/dividerView"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E2E3E4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>